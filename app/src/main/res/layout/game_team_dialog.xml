<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="350dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_nonbirdie_portrait"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newTeam_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Enter Match data"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dip"
        android:background="@color/colorWhite" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Team1: "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newTeam1_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="TEAM01"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLength="@integer/max_shortname_len"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/design_default_color_primary_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Team2: "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newTeam2_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="TEAM02"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLength="@integer/max_shortname_len"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

    </LinearLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorWhite" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/t1p1_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:hint="team1 player1"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/max_longname_len"
            android:singleLine="true"
            android:textColor="@color/design_default_color_primary_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />
        <EditText
            android:id="@+id/t2p1_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="team2 player1"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/max_longname_len"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/t1p2_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:hint="team1 player2"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/max_longname_len"
            android:singleLine="true"
            android:textColor="@color/design_default_color_primary_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />
        <EditText
            android:id="@+id/t2p2_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="team2 player2"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 -_"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/max_longname_len"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorWhite" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/enter_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/roundedrect"
            android:text="@string/action_enter"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/roundedrect"
            android:text="cancel"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:contentDescription="@string/st_image_desc"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/birdie02" />
</LinearLayout>